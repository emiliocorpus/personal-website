<%= render 'partials/navbar_blogs' %>

<div class="new-blog-container">

		<div class="new-blog">

			<h2>New Blog</h2>

			<% if flash[:errors] %>	
				<% flash[:errors].each do |err| %>
					<p class="error">
						<%= err %>
					</p>
				<% end %>
			<% end %>



			<%= form_for @blog, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>

			  <%= f.label :title %><br/>
			  <%= f.text_field :title %><br/><br/>

			  <%= f.label :picture_link %><br/>
			  <%= f.text_field :pic_url %><br/><br/>


			  <%= f.label :content %><br/>
			  <%= f.text_area :html, size: "60x12" %><br/><br/>
			  <%= f.submit "Create" %>
			<% end %>

		</div>

</div>
<%= render 'partials/footer' %>